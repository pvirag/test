{
  "name": "student-test",
  "version": "1.0.0",
  "description": "frontend test",
  "main": "index.js",
  "scripts": {
    "clean": "echo \"Cleaning...\" && rm -rf ../public && mkdir ../public ../public/css ../public/js ../public/tests",
    "prebuild": "npm run clean -s",
    "build:css": "echo \"Building CSS...\" && postcss --use cssnext --cssnext.browsers \"last 2 versions\" css/default.css | cssmin > ../public/css/default.css",
    "build:scripts": "echo \"Building JS...\" && browserify js/default.js -d -p [minifyify --map default.map.json --output ../public/js/default.map.json] > ../public/js/default.js",
    "build:tests": "echo \"Building Tests...\" && browserify tests/tests.js -d -p [minifyify --map tests.map.json --output ../public/tests/tests.map.json] > ../public/tests/tests.js",
    "prebuild:js": "echo \"Linting JS...\" && jshint js --reporter node_modules/jshint-stylish",
    "prebuild:tests": "echo \"Linting Tests...\" && jshint tests --reporter node_modules/jshint-stylish",
    "build:js": "npm run build:scripts -s & npm run build:tests -s &",
    "postbuild:js": "npm run test -s",
    "watch:css": "onchange \"css/**/*.css\" -- npm run build:css",
    "watch:js": "onchange \"js/**/*.js\" \"tests/**/*.js\" -- npm run build:js",
    "watch": "npm run watch:js -s & npm run watch:css -s",
    "dev": "npm outdated -D --depth 0 && npm run build -s && npm run watch -s",
    "build": "npm run build:css -s && npm run build:js -s",
    "test": "karma start karma.conf.js"
  },
  "author": "hexx.thalion@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^11.0.1",
    "chai": "^3.2.0",
    "cssmin": "^0.4.3",
    "cssnext": "^1.8.4",
    "jshint": "^2.8.0",
    "jshint-stylish": "^2.0.1",
    "karma": "^0.13.9",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^0.2.0",
    "karma-cli": "^0.1.0",
    "karma-jquery": "^0.1.0",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-safari-launcher": "^0.1.1",
    "minifyify": "^7.0.5",
    "mocha": "^2.3.0",
    "onchange": "^2.0.0",
    "phantomjs": "^1.9.18",
    "postcss-cli": "^1.5.0"
  }
}
